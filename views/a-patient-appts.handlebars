<div class="container">

    {{!-- navbar with home icon, etc. --}}

    <div class="row">
        <div class="col-md-12 text-center">
            <img src="/img/logopic.png" alt="logo">
        </div>
    </div>


    <!-- List appointments -->
    <div class="container appt-list mt-3">
        <div class="row row-control">
            <div class="col-md-12 d-flex justify-content-center">
                <h3 class="title-control text-center">Your Appointments</h3>
            </div>
        </div>



        <div class="row">
            <div class="col-md-4">
                <a href="/patient/form"><button class="btn btn-primary button button-control"><span><i
                                class="far fa-calendar-plus"></i></span>
                        Appointment</button></a>
            </div>
            <div class="col-md-4">
                <a href="/patient/appts/:id"><button class="btn btn-primary button button-control"><span><i
                                class="fas fa-eye"></i></span> Appointment</button></a>
            </div>
            <div class="col-md-4">
                <a href="/patient/:id"><button class="btn btn-primary button button-control"><span><i
                                class="fas fa-user">
                            </i></span> Profile</button></a>
            </div>
        </div>


        <ul id="appointment-list" class="list-group section-b-control">
            {{#each appointments}}
            <a href="appointment/{{this.id}}">
                <option data-id="{{this.id}}" class="list-group-item">
                    <button class="button button-control"> {{this.status}} - {{this.doctor}}</button>
            </a>
            <button class="btn btn-danger float-right cancel"><i class="far fa-window-close"></i></button>
            </option>
            {{/each}}
        </ul>
    </div>

</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js">
</script>
<script src="/js/index.js"></script>