<div class="container">

    {{!-- navbar with home icon, etc. --}}
    {{!-- appointa image --}}
    <div class="row">
        <div class="col-md-12 text-center">
            <img src="/img/logopic.png" alt="logo">
        </div>
    </div>

    {{!-- appointment request form --}}


    <div class="container">
        <section id="section-b" class="section-b-control">

            <form>
                <div class="form col-xs-12">

                    <span><i class="fas fa-user icon-control"></i></span>
                    <input type="text" name="name" autocomplete="off" required id="patient-firstname">
                    <label for="name" class="label-name"><span class="content-text">First Name</span>
                    </label>
                </div>
            </form>

            <form>
                <div class="form col-xs-12">

                    <span><i class="fas fa-user icon-control"></i></span>
                    <input type="text" name="name" autocomplete="off" required id="patient-lastname">
                    <label for="name" class="label-name"><span class="content-text">last name</span>
                    </label>
                </div>
            </form>

            <form>
                <div class="form col-xs-12">

                    <span><i class="fas fa-user icon-control"></i></span>
                    <input type="text" name="name" autocomplete="off" required id="visit-purpose">
                    <label for="name" class="label-name"><span class="content-text">Reason for your visit</span>
                    </label>
                </div>
            </form>


            <div class="form col-xs-12">

                <select class="form-control" id="select-doctor">
                    <label for="select-doctor">Select a doctor</label>
                    <option>Select a doctor</option>
                    <option id="1" name="Eric Vargas">Eric Vargas (Cardiologist)</option>
                    <option id="2" name="Ron Erlih">Ron Erlih (Brain Surgeon)</option>
                    <option id="3" name="Tony Ho">Tony Ho (Neurologist)</option>
                </select>
            </div>

            <form>
                <div class="form col-xs-12">

                    <span><i class="fas fa-user icon-control"></i></span>
                    <input type="date" name="name" autocomplete="off" required id="appt-date">
                    <label for="name" class="label-name"><span class="content-text"></span>
                    </label>
                </div>
            </form>
            <form>
                <div class="form col-xs-12">
                    <input placeholder="Select time" type="text" id="input_starttime" class="timepicker">
                    <label for="time">Set time</label>
                </div>
            </form>

            <div class="form-group">
                <label for="time">Time</label>
                <input type="time" class="form-control" id="appt-time" placeholder="time">
            </div>

            <div class="form-group">
                <label for="email">Email</label>
                <input type="text" class="form-control" id="patient-email" placeholder="email">
            </div>

            <div class="form-group">
                <label for="phone">Phone</label>
                <input type="text" class="form-control" id="patient-phone" placeholder="phone">
            </div>

            <div class="form-group">
                <label for="insurance-provider">Insurance Provider</label>
                <input type="text" class="form-control" id="insurance-provider" placeholder="insurance provider">
            </div>

            <div class="form-group">
                <label for="group-id">Insurance Group ID</label>
                <input type="text" class="form-control" id="group-id" placeholder="insurance group id">
            </div>

            <button type="submit" action="POST" id="request-form" class="btn btn-primary">Submit</button>
        </section>
    </div>
</div>

<script src="/js/index.js"></script>
